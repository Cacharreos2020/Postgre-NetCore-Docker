@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <a class="btn btn-info" href="@Url.ActionLink("Add_Users","Home")">Add Users</a>
    <a class="btn btn-success" href="@Url.ActionLink("Reload","Home")">Select Users</a>
    <a class="btn btn-danger" href="@Url.ActionLink("Use_Seed","Home")">Use Seeder (Warning)</a>

    @{ 
        if (ViewBag.DataDB != null)
        {
            <h1 class="alert-success">@ViewBag.DataDB</h1>
        }
    }
</div>
